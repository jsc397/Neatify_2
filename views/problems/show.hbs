{{!-- here... populate the solutions and see them --}}

{{!-- one specific problem --}}

<div>
    {{ paragraph }}
</div>


<form action="/problems/{{_id}}?_method=PUT" method="POST" class="solution-form">
<textarea cols="55" rows="10" name="content"></textarea>
<button type ="submit">Submit Solution</button>
</form> 

{{!-- solutions --}}
{{!-- If there are solutions --}}
{{!-- For each solution, display the content  --}}
{{#if solutions}}
{{#each solutions.length}}
<div class ="solutions-card">
    {{content}}
</div>
{{/each}}
{{/if}}
