{{!-- here... populate the solutions and see them --}}
<div class="problem-wrapper d-flex mt-2 flex-column">
    <h3 class="problem">{{problems.paragraph}}</h3>

    <form action="/problems/{{problems._id}}?_method=PUT" method="POST" class="solution-form">
        <textarea class='form-control' id='formControl' rows="3" name="content" placeholder="Please type your solution here"></textarea>
        <button type="submit" class="btn btn-outline-info mt-4">Submit Solution</button>
    </form>

    <a href="/problems" class="button">
        <button class="btn btn-outline-info mt-2">See all problems</button>
    </a>

    {{#if problems.solutions }} {{#each problems.solutions}}
    <div class="problem-solution mt-3">
        <span class="createdAt">{{createdAt}}: </span>
        <span class="content">{{content}}</span>

    </div>
    {{/each}} {{/if}}
</div>