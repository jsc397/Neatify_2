<div class="profile d-flex flex-column">
    <h2>{{user.local.email}}</h2>
    {{#if user.solutions}}
    <div class="solutions d-flex flex-column">
        {{#each user.solutions}} {{/each}}
    </div>
    {{else}}
    <p>No Solutions yet</p>
    {{/if}}
</div>

<form action="/user/{{user.id}}?_method=DELETE" method="POST">
    <input type="submit" value="Delete User" />
</form>

<a href="/problems"><button class="problems-page">Problems</button></a>