<section class="profile">
    <h2>{{user.local.email}}</h2>
    {{#if user.solutions}}
    <div class="solutions">
        {{#each user.solutions}} {{/each}}
    </div>
    {{else}}
    <p>No Solutions yet</p>
    {{/if}}
</section>

<form action="/user/{{id}}?_DELETE=" method="POST">
    <button type="submit" name "button">Delete User</button>
</form>

<a href="/problems"><button class="problems-page">Problems</button></a>